<div class="banner">
  <h1 class="mb-3">Welcome to the Todo List App!</h1>

  <% if user_signed_in? %>
    <%= link_to "View my list", todos_path, class: 'btn btn-primary' %>
  <% else %>
    <p>Please sign up or log in to continue</p>
    <div class="d-flex">
      <%= link_to "Sign up", new_user_session_path, class: 'btn btn-primary mx-2' %>
      <%= link_to "Log in", new_user_registration_path, class: 'btn btn-secondary mx-2' %>
    </div>
  <% end %>
</div>
